{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::{{accountID}}:oidc-provider/oidc.eks.{{region-code}}.amazonaws.com/id/{{oidc}}"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "oidc.eks.{{region-code}}.amazonaws.com/id/{{oidc}}:aud": "sts.amazonaws.com",
                    "oidc.eks.{{region-code}}.amazonaws.com/id/{{oidc}}:sub": "system:serviceaccount:kube-system:aws-load-balancer-controller"
                }
            }
        }
    ]
}